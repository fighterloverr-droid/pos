<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditSaleActivity">

    <!-- Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="အရောင်း ပြင်ဆင်ရန်" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Customer Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Customer အချက်အလက်"
                        android:textAppearance="?attr/textAppearanceTitleMedium" />
                    <EditText
                        android:id="@+id/editTextCustomerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="အမည်"
                        android:inputType="textPersonName" />
                    <EditText
                        android:id="@+id/editTextCustomerPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="ဖုန်းနံပါတ်"
                        android:inputType="phone" />
                    <EditText
                        android:id="@+id/editTextCustomerAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="ပို့ဆောင်ရန်လိပ်စာ"
                        android:inputType="textPostalAddress" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Items List -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="မှာယူသော ပစ္စည်းများ"
                    android:textAppearance="?attr/textAppearanceTitleMedium" />
                <ImageButton
                    android:id="@+id/buttonScanCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_scan"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Scan Code"
                    android:padding="8dp"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewSalesItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="150dp"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false"/>

            <Button
                android:id="@+id/buttonAddItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="ပစ္စည်း ထပ်ထည့်ရန်"
                app:icon="@drawable/ic_add"/>

            <!-- Summary Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:id="@+id/textViewSubtotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        tools:text="စုစုပေါင်း: 3,000 Ks" />
                    <EditText
                        android:id="@+id/editTextDiscount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:hint="Discount (Ks)"
                        android:inputType="numberDecimal"/>
                    <EditText
                        android:id="@+id/editTextDeliveryFee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:hint="ပို့ဆောင်ခ (Ks)"
                        android:inputType="numberDecimal"/>
                    <TextView
                        android:id="@+id/textViewGrandTotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="end"
                        android:textAppearance="?attr/textAppearanceHeadlineSmall"
                        android:textStyle="bold"
                        tools:text="ကျသင့်ငွေ: 3,000 Ks" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Payment and Delivery -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="ငွေပေးချေမှုအမျိုးအစား"
                android:textAppearance="?attr/textAppearanceTitleMedium" />

            <RadioGroup
                android:id="@+id/radioGroupPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <RadioButton
                    android:id="@+id/radioButtonPaid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ငွေရပြီး"
                    android:checked="true"/>
                <RadioButton
                    android:id="@+id/radioButtonCod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="COD"/>
                <RadioButton
                    android:id="@+id/radioButtonCredit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="အကြွေး"/>
            </RadioGroup>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchDelivered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="ပို့ဆောင်ပြီး"
                android:textSize="18sp"/>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp">
                <Button
                    android:id="@+id/buttonCancel"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="မလုပ်တော့ပါ"/>
                <Button
                    android:id="@+id/buttonConfirmSale"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Update"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>