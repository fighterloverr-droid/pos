<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Metrics Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/cardOperatingCash"
                layout="@layout/card_metric_layout" />

            <include
                android:id="@+id/cardInventoryValue"
                layout="@layout/card_metric_layout" />

            <include
                android:id="@+id/cardNetProfit"
                layout="@layout/card_metric_layout" />

            <include
                android:id="@+id/cardGrossProfit"
                layout="@layout/card_metric_layout" />

        </LinearLayout>

        <!-- Daily Sales (Bar Chart) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dashboard_daily_sales"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:layout_marginTop="24dp"
            android:layout_marginStart="8dp"/>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChartSales"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="8dp"/>

        <!-- Monthly Expenses (Pie Chart) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dashboard_monthly_expenses"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:layout_marginTop="24dp"
            android:layout_marginStart="8dp"/>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChartExpenses"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="8dp"/>

        <!-- Monthly Trend (Line Chart) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dashboard_monthly_trend"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:layout_marginTop="24dp"
            android:layout_marginStart="8dp"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChartSales"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</ScrollView>
