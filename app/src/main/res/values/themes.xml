<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.POS" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_teal</item>
        <item name="colorPrimaryVariant">@color/primary_dark_teal</item>
        <item name="colorSecondary">@color/secondary_teal</item>
        <item name="colorSecondaryVariant">@color/secondary_teal</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.POS" parent="Base.Theme.POS" />

    <style name="PinPadButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:background">@drawable/pin_button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">12dp</item>
    </style>

    <style name="PinPadImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_margin">12dp</item>
    </style>

</resources>